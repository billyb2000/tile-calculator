    private void btn_calculateActionPerformed(java.awt.event.ActionEvent evt) {                                              
       txt_errorMessages.setText(""); // Clear previous messages
    txt_totalTileArea.setText("");
    txt_totalCost.setText("");

    // Validate floor area input
    double floorArea;
    try {
        floorArea = Double.parseDouble(txt_floorArea.getText().trim());
        if (floorArea <= 0) throw new NumberFormatException();
    } catch (NumberFormatException e) {
        txt_errorMessages.setText("Invalid floor area! Enter a positive number only.");
        return;
    }

    // Tile areas (m²) and prices ($)
    double hexArea = 0.25, rectArea = 0.36, circleArea = 0.28, diamondArea = 0.22,
           donutArea = 0.20, paraArea = 0.30, triArea = 0.18;

    double hexPrice = 2.50, rectPrice = 2.00, circlePrice = 2.25, diamondPrice = 1.75,
           donutPrice = 2.00, paraPrice = 2.25, triPrice = 1.50;

    // Parse all tile counts using helper method
    Integer hexCount = parseTileCount(txt_hexaTiles.getText());
    Integer rectCount = parseTileCount(txt_rectTiles.getText());
    Integer circleCount = parseTileCount(txt_circleTiles.getText());
    Integer diamondCount = parseTileCount(txt_diamondTiles.getText());
    Integer donutCount = parseTileCount(txt_donutTiles.getText());
    Integer paraCount = parseTileCount(txt_parallelogramTiles.getText());
    Integer triCount = parseTileCount(txt_triangleTiles.getText());

    // If any input is invalid, show error
    if (hexCount == null || rectCount == null || circleCount == null || diamondCount == null
        || donutCount == null || paraCount == null || triCount == null) {
        txt_errorMessages.setText("Tile counts must be numeric and non-negative!");
        return;
    }

    // Calculate totals
    double totalArea = hexCount * hexArea + rectCount * rectArea + circleCount * circleArea
                     + diamondCount * diamondArea + donutCount * donutArea
                     + paraCount * paraArea + triCount * triArea;

    double totalCost = hexCount * hexPrice + rectCount * rectPrice + circleCount * circlePrice
                     + diamondCount * diamondPrice + donutCount * donutPrice
                     + paraCount * paraPrice + triCount * triPrice;

    txt_totalTileArea.setText(String.format("%.2f", totalArea));
    txt_totalCost.setText(String.format("%.2f", totalCost));

    // Check if total tile area covers floor area with 1-2 m² extra
double extraArea = totalArea - floorArea;
if (extraArea < 1.0) {
    txt_errorMessages.setText("Not enough tiles! Add more to cover the floor with at least 1 m² extra.");
} else if (extraArea > 2.0) {
    txt_errorMessages.setText("Too many tiles! Reduce tiles to keep extra area within 2 m².");
} else {
    txt_errorMessages.setText("Sufficient tiles to cover the floor area with 1–2 m² extra.");
}
    }                                             

private Integer parseTileCount(String text) {
    if (text == null || text.trim().isEmpty()) return 0; // treat empty as 0
    try {
        int val = Integer.parseInt(text.trim());
        if (val < 0) return null; // negative not allowed
        return val;
    } catch (NumberFormatException e) {
        return null; // non-numeric input
    }
}
    
